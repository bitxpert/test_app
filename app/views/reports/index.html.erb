<script type="text/javascript">
  $(document).ready(function(){

    if ( $('#inc_id').length > 0 && $('#inc_id').val() > 0 ){
      window.location.href = '/incidents/'+ $('#inc_id').val() +'/send_new_incident.pdf';
    }

  });  
</script>
<%#= hidden_field_tag 'active_class', 'all_projects'%>
<% if @reports.present? %>  
  <table class="table table-bordered table-striped table-condensed">
    <thead>
      <th>Name</th>
      <th>Action</th>
    </thead>  
    <tbody>
      <% @reports.each do |report|%>
        <tr>
          <td><%= report.name %></td>
          <td>
            <%= link_to "Download Report",detail_report_project_report_path(@project,report ,{ format: :pdf}), class: "btn btn-success btn-xs" %>
            <%= link_to "View Report", project_report_path(@project,report), class: "btn btn-xs btn-primary" %>
            <%= link_to 'Destroy', project_report_path(@project,report), data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-xs btn-danger" %>
            </td>
        </tr>
      <% end %>   
    </tbody>  
  </table> 
  <% if params[:inc].present? && Incident.find(params[:inc]).present? && Incident.find(params[:inc]).downloaded.blank? %>
    <%= hidden_field_tag :inc_id, params[:inc] %>
  <% end %>
<% else %>
  <div class="alert alert-info">No report has been found.</div>
<% end %>
<%= link_to "< Back",projects_path, class: "btn btn-primary" %>   

