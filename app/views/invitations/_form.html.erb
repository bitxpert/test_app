<div class="text-center">
	<%= form_for @invitation do |f| %>
	<% if @invitation.errors.any? %>
		<div>
		  <% @invitation.errors.full_messages.each do |msg| %>
		    <%= msg %><br/>
		  <% end %>
		</div>
	<% end %>
		<div>
			<%= f.label :email %>
  		<%= f.email_field :email, autofocus: true %>
 	  </div>
 	  <div>
			<% if current_user.role == "admin" %>
  			<%= f.label :Role %>
  			<%= f.select :role, options_for_select([['Client','client'],['Admin','admin']], :selected => @invitation.role.present? ? @invitation.role : "user"), {} %>
  		<% else %>	
  			<%= f.hidden_field :role, value: "user" %>
  		<% end %>
 	  </div>
 	  <div>
 	  	<%= f.submit "Submit", class: "btn btn-primary btn-sm"%>
 	  </div>	
	<% end %>
</div>	