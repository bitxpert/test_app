<table class="table table-striped">
  <tr>
    <th>Project ID</th>
    <th>Project Title</th>
    <th>Post</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @project.each do |project| %>
  
    <tr>
        <td><%= project.id %></td>
        <td><%= project.title%></td>
        <td><%= link_to 'Show', [project], :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_project_path(project), :class => "btn btn-primary"%></td>
        <td><%= link_to 'Destroy', [project],:class => "btn btn-danger", :confirm => 'Are you sure?', :method => :delete %>
        </td>
        <td><%= link_to 'Create Bug', new_project_bug_path( project, Bug.new), :class => "btn btn-small btn-success" %></td>
    </tr>
  
  <% end %>
</table>
